<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/layoutBackground">


            <TextView
                android:id="@+id/tv_reviewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:text="Review by "
                android:textColor="@android:color/white"
                android:textSize="@dimen/backdrop_subtitle" />

            <TextView
                android:id="@+id/tv_read_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_review"
                android:layout_marginRight="@dimen/card_margin"
                android:text="Read full review"
                android:layout_marginTop="@dimen/card_margin"
                android:textColor="@color/fabBackground"
                android:textSize="@dimen/backdrop_subtitle" />

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/tv_reviewer"
                android:layout_below="@+id/tv_reviewer"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:ellipsize="end"
                android:maxLines="5"
                android:minLines="5"
                android:scrollHorizontally="false"
                android:text="The minions are a nice idea and the animation and London recreation is really good, but that's about it.\r\n\r\nThe script is boring and the jokes not really funny."
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
